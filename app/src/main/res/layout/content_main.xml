<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_result_calculation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.standardstudio.agecalculator.MainActivity"
    tools:showIn="@layout/app_bar_result_calculation">
    <TextView
        android:id="@+id/textView_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="Please set your Date Of Birth First!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif" />
    <com.google.android.gms.ads.NativeExpressAdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        ads:adUnitId="@string/native_ad_unit_id"
        ads:adSize="320x150">

    </com.google.android.gms.ads.NativeExpressAdView>

</RelativeLayout>
